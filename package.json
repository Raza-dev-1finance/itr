{
  "name": "itr",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "start": "next start",
    "prepare": "husky",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint 'src/**/*.{js,ts,tsx}'",
    "dev": "dotenv -e .env.dev -- next dev --turbopack",
    "build:dev": "dotenv -e .env.dev -- next build",
    "start:dev": "dotenv -e .env.dev -- next start",
    "qa": "dotenv -e .env.qa -- next dev",
    "build:qa": "dotenv -e .env.qa -- next build",
    "start:qa": "dotenv -e .env.qa -- next start",
    "uat": "dotenv -e .env.uat -- next dev",
    "build:uat": "dotenv -e .env.uat -- next build",
    "start:uat": "dotenv -e .env.uat -- next start"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "clsx": "^2.1.1",
    "dotenv": "^16.5.0",
    "eslint-config-prettier": "^10.1.2",
    "next": "15.3.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.2.0",
    "tailwind-scrollbar": "^4.0.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "husky": "^9.1.7",
    "prettier": "^3.2.5",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format"
    }
  }
}
